<h2>Edit exhibition by <%= @exhibit.artist.name %></h2>

<form method="post" action="/exhibits/<%= @exhibit.id %>">
  <label for="artist">Artist:</label>
  <select name="artist_id" id="artist">
    <% @artists.each do |artist| %>
      <% if artist.id == @exhibit.artist_id %>
        <option value="<%= artist.id %>" selected>
          <%= artist.name %>
        </option>
      <% else %>
        <option value="<%= artist.id %>">
          <%= artist.name %>
        </option>
      <% end %>
    <% end %>
  </select>
  <label for="category">Category:</label>
  <input type="text" name="category" value="<%= @exhibit.category %>">
  <input type="submit">
</form>
